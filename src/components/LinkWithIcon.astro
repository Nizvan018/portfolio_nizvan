---
interface Props {
    href: string;
    label: string;
    ariaLabel?: string;
    className?: string;
}

const { href, label, ariaLabel, className = "" } = Astro.props;
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    aria-label={ariaLabel}
    class={`group flex items-center gap-1 ${className}`}
>
    <slot />
    <span class="text-white/80 font-light duration-200 group-hover:text-white"
        >{label}</span
    >
</a>

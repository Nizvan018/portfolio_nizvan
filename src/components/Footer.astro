---
import GitHubIcon from "./icons/GitHubIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import EmailIcon from "./icons/EmailIcon.astro";

const pathname = Astro.url.pathname;
---

<footer
    class="flex justify-center w-full px-0 sm:px-8 bg-gray-950 border-t border-gray-100/20"
>
    <div class="flex w-full max-w-[1200px] py-12 px-8">
        <a
            href="/"
            class="text-nowrap py-4 pr-8 border-r border-gray-100/20 text-2xl font-bold"
            >&lt;n /&gt;</a
        >
        <div class="flex flex-col md:flex-row gap-8 md:gap-0 w-full pl-8 py-4">
            <div class="flex flex-col justify-center gap-2 w-full h-full">
                <!-- ENLACES PARA HOME PAGE -->
                {
                    pathname === "/" && (
                        <div class="flex flex-col sm:flex-row gap-1 sm:gap-4 text-xs font-semibold text-white">
                            <a
                                href="#experience"
                                class="opacity-50 duration-300 hover:opacity-100"
                            >
                                Experiencia
                            </a>
                            <a
                                href="#projects"
                                class="opacity-50 duration-300 hover:opacity-100"
                            >
                                Proyectos
                            </a>
                            <a
                                href="/aboutMe"
                                class="opacity-50 duration-300 hover:opacity-100"
                            >
                                Sobre mí
                            </a>
                        </div>
                    )
                }
                <!-- ENLACES PARA SOBRE MÍ -->
                {
                    pathname.startsWith("/aboutMe") && (
                        <div class="flex flex-col sm:flex-row gap-1 sm:gap-4 text-xs font-semibold text-white">
                            <a
                                href="/"
                                class="opacity-50 duration-300 hover:opacity-100"
                            >
                                Inicio
                            </a>
                            <a
                                href="#personality"
                                class="opacity-50 duration-300 hover:opacity-100"
                            >
                                Personalidad
                            </a>
                            <a
                                href="#studies"
                                class="opacity-50 duration-300 hover:opacity-100"
                            >
                                Estudios
                            </a>
                        </div>
                    )
                }
                <span class="text-xs font-light text-white/50"
                    >2025 | Diseñado y desarrollado por nizvan_dev</span
                >
            </div>
            <div class="flex flex-col justify-center gap-2 h-full">
                <div class="flex gap-4 text-xs font-semibold text-white">
                    <a
                        href="https://www.instagram.com/nizvan_dev/"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Mi Instagram"
                    >
                        <InstagramIcon
                            width={18}
                            height={18}
                            className="opacity-50 duration-300 hover:opacity-100"
                        />
                    </a>
                    <a
                        href="https://github.com/Nizvan018"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Mi GitHub"
                    >
                        <GitHubIcon
                            width={18}
                            height={18}
                            className="opacity-50 duration-300 hover:opacity-100"
                        />
                    </a>
                    <a
                        href="mailto:nizvan.dev@gmail.com?subject=Consulta%20sobre%20desarrollo%20web"
                        aria-label="Enviar correo"
                    >
                        <EmailIcon
                            width={18}
                            height={18}
                            className="opacity-50 duration-300 hover:opacity-100"
                        />
                    </a>
                </div>
                <span
                    class="text-xs font-semibold opacity-50 duration-300 hover:opacity-100"
                    >nizvan.dev@gmail.com</span
                >
                <span class="text-xs font-light text-white/50">
                    Plantilla de código abierto:
                    <a
                        href="https://github.com/Nizvan018/portfolio_nizvan"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="underline">Visita el repositorio</a
                    >
                </span>
            </div>
        </div>
    </div>
</footer>

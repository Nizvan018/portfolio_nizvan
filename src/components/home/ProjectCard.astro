---
import Image from "astro/components/Image.astro";

interface Props {
    image: ImageMetadata;
    alt: string;
    title: string;
    description: string;
    from: string;
    rgba: string;
}

const { image, alt, title, description, from, rgba } = Astro.props;
---

<article
    class={`overflow-hidden w-full md:w-[calc(50%-16px)] p-[2px] rounded-[10px] bg-gradient-to-b ${from} from-30% to-gray-900`}
>
    <div
        class="flex flex-col w-full h-full rounded-lg"
        style={`background-image: radial-gradient(100% 100% at top, ${rgba}, rgb(3 7 18));`}
    >
        <picture class="w-full h-64 bg-gray-800 rounded-t-lg">
            <Image
                src={image}
                alt={alt}
                class="rounded-t-lg h-64 object-cover"
            />
        </picture>
        <div class="flex flex-col gap-1 p-4">
            <h3 class="font-bold">{title}</h3>
            <p class="font-light text-sm text-white/80">{description}</p>
            <div class="flex flex-wrap gap-2 mt-6">
                <slot />
            </div>
        </div>
    </div>
</article>

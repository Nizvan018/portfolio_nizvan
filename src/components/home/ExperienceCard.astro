---
interface Props {
    color: string;
    title: string;
    years: string;
}

const { color, title, years } = Astro.props;
---

<div
    class={`p-[2px] rounded-[10px] ${color} duration-300 hover:bg-${color}-500/60`}
>
    <div
        class="flex flex-col items-center gap-4 py-6 px-8 rounded-lg bg-gray-950"
    >
        <h3 class={`text-${color}-500/85 font-semibold`}>{title}</h3>
        <span class="text-5xl text-white/85">{years}</span>
    </div>
</div>

<style>
    .pink {
        background-image: radial-gradient(
            at top,
            rgba(236, 72, 153, 0.6),
            rgb(31 41 55) 50%,
            rgb(3 7 18)
        );
        box-shadow: rgba(217, 70, 239, 0.1) 0px -8px 16px;
    }

    .violet {
        background-image: radial-gradient(
            at top,
            rgba(139, 92, 246, 0.6),
            rgb(31 41 55) 50%,
            rgb(3 7 18)
        );
        box-shadow: rgba(217, 70, 239, 0.1) 0px -8px 16px;
    }

    .sky {
        background-image: radial-gradient(
            at top,
            rgba(14, 165, 233, 0.6),
            rgb(31 41 55) 50%,
            rgb(3 7 18)
        );
        box-shadow: rgba(217, 70, 239, 0.1) 0px -8px 16px;
    }
</style>

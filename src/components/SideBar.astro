---
import GitHubIcon from "./icons/GitHubIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import EmailIcon from "./icons/EmailIcon.astro";

const pathname = Astro.url.pathname;
---

<div
    class="w-full flex gap-4 text-sm px-8 py-4 border-b border-gray-100/20 bg-gray-950/80 backdrop-blur-md"
>
    <!-- ENLACES PARA HOME PAGE -->
    {
        pathname == "/" && (
            <div class="flex flex-col gap-4 w-full text-sm">
                <a
                    class="opacity-50 duration-200 hover:opacity-100"
                    href="#experience"
                >
                    Experiencia
                </a>
                <a
                    class="opacity-50 duration-200 hover:opacity-100"
                    href="#projects"
                >
                    Proyectos
                </a>
                <a
                    class="opacity-50 duration-200 hover:opacity-100"
                    href="/aboutMe"
                >
                    Sobre mí
                </a>
            </div>
        )
    }
    <!-- ENLACES PARA ABOUT ME -->
    {
        pathname.startsWith("/aboutMe") && (
            <div class="flex flex-col gap-4 w-full text-sm">
                <a class="opacity-50 duration-200 hover:opacity-100" href="/">
                    Inicio
                </a>
                <a
                    class="opacity-50 duration-200 hover:opacity-100"
                    href="#personality"
                >
                    Personalidad
                </a>
                <a
                    class="opacity-50 duration-200 hover:opacity-100"
                    href="#studies"
                >
                    Estudios
                </a>
            </div>
        )
    }
    <div class="flex gap-4 items-end">
        <a
            href="https://github.com/Nizvan018"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Visitarme en GitHub"
            class="opacity-50 duration-200 hover:opacity-100"
        >
            <GitHubIcon width={20} height={20} />
        </a>
        <a
            href="https://www.instagram.com/nizvan_dev/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Visitarme en Instagram"
            class="opacity-50 duration-200 hover:opacity-100"
        >
            <InstagramIcon width={20} height={20} />
        </a>
        <a
            href="mailto:nizvan.dev@gmail.com?subject=Consulta%20sobre%20desarrollo%20web"
            aria-label="Enviarme correo electrónico"
            class="flex items-center gap-2 opacity-50 duration-200 hover:opacity-100"
        >
            <EmailIcon width={20} height={20} />
            <span class="text-xs font-light">nizvan.dev@gmail.com</span>
        </a>
    </div>
</div>

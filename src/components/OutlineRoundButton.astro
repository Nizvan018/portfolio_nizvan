---
interface Props {
    label: string;
    href?: string;
    className?: string;
}

const { label, href = "", className = "" } = Astro.props;
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class={`group flex items-center gap-2 border-2 border-white rounded-full px-4 py-2 text-xs sm:text-sm font-medium sm:font-semibold duration-300 hover:bg-white hover:text-black ${className}`}
>
    {label}
    <slot />
</a>

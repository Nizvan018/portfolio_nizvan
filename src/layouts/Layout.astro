---
import "@fontsource/be-vietnam-pro/100.css";
import "@fontsource/be-vietnam-pro/200.css";
import "@fontsource/be-vietnam-pro/300.css";
import "@fontsource/be-vietnam-pro/400.css";
import "@fontsource/be-vietnam-pro/500.css";
import "@fontsource/be-vietnam-pro/600.css";
import "@fontsource/be-vietnam-pro/700.css";
import "@fontsource/be-vietnam-pro/800.css";
import "@fontsource/be-vietnam-pro/900.css";
import "@fontsource/be-vietnam-pro/100-italic.css";
import "@fontsource/be-vietnam-pro/200-italic.css";
import "@fontsource/be-vietnam-pro/300-italic.css";
import "@fontsource/be-vietnam-pro/400-italic.css";
import "@fontsource/be-vietnam-pro/500-italic.css";
import "@fontsource/be-vietnam-pro/600-italic.css";
import "@fontsource/be-vietnam-pro/700-italic.css";
import "@fontsource/be-vietnam-pro/800-italic.css";
import "@fontsource/be-vietnam-pro/900-italic.css";

import "@styles/global.css";
import "sonner/dist/styles.css";
import Navbar from "@components/Navbar.astro";
import CustomToaster from "@components/react/CustomToaster";
import Footer from "@components/Footer.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<CustomToaster client:load />
		<div
			class="fixed top-0 z-[-2] h-screen w-screen bg-[#000000] bg-[radial-gradient(#ffffff1e_1px,#030712_1px)] bg-[size:20px_20px]"
		>
		</div>
		<div
			class="absolute top-0 z-[-2] h-screen w-screen bg-transparent bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(88,28,135,0.3),rgba(255,255,255,0))]"
		>
		</div>

		<Navbar server:defer />
		<main class="flex justify-center px-8 w-full">
			<slot />
		</main>
		<Footer />
	</body>
</html>
